# Root EditorConfig File
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation settings for JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Indentation settings for JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Indentation settings for CSS and SCSS files
[*.{css,scss}]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Indentation settings for HTML files
[*.html]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.yaml]
charset = utf-8
indent_style = space
indent_size = 2
